<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_title_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/recommend_up" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-35dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:paddingRight="40dp" >

                <View
                    style="@style/line_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

                <TextView
                    style="@style/text_43_black_small"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="推荐有奖" />

                <View
                    style="@style/line_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical" >

                <TextView
                    style="@style/text_43_black_small"
                    android:layout_marginTop="8dp"
                    android:text="1.分享链接给你的好友,如果他们是我们的新用户,完成注册并进入个人中心,就能看到一套组合红包,下单时可使用红包抵扣相应的金额" />

                <TextView
                    style="@style/text_43_black_small"
                    android:layout_marginTop="10dp"
                    android:text="2.该用户下单成功,并且本人确认收货,推荐者立即获得一元佣金" />

                <TextView
                    style="@style/text_43_black_small"
                    android:layout_marginTop="10dp"
                    android:text="3.余额在超市消费无使用限制,可累积使用" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_fillet_5_green_bg"
                    android:text="分享"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/recommend_down" />
    </RelativeLayout>

</LinearLayout>