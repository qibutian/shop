<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res/com.means.shopping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/model_pic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="8dp" >

        <LinearLayout
            android:id="@+id/sign_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_qiandao"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="签到" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_fenlei"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="分类" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/chongzhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_chongzhi"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="充值" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_fenxiang"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="分享" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="12dp" >

        <LinearLayout
            android:id="@+id/market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_shop"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="超市" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/night_life"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_yeshenghuo"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="夜生活" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/redpacket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_hongbao"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="红包" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/commission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_yongjin"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_43_black_smaller"
                android:layout_marginTop="1dp"
                android:text="佣金" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_marginTop="7dp"
        android:background="@color/tab_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_hot" />

        <TextView
            style="@style/text_43_black_medium"
            android:layout_marginLeft="5dp"
            android:text="天天热卖" />
    </LinearLayout>

    <View style="@style/line_horizontal" />

</LinearLayout>